<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- Login styles -->
    <style name="edit_text_style" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:textSize">@dimen/medium_font</item>
        <item name="android:background">@drawable/edit_text_background</item>
    	<item name="android:textCursorDrawable">@null</item>
    </style>
    
    <style name="button_style" parent="@android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:textSize">@dimen/medium_font</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_background</item>
    </style>
    
    <!-- Profile styles -->
    <style name="profile_title_style" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:textSize">@dimen/medium_font</item>
        <item name="android:background">@drawable/edit_text_background</item>
    	<item name="android:textCursorDrawable">@null</item>
    </style>
    
    <style name="table_row_title_style" parent="@android:style/Widget.TextView">
        <item name="android:paddingRight">@dimen/small_padding</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
        <item name="android:textSize">@dimen/medium_font</item>
    </style>
    
    <style name="table_row_input_style" parent="@android:style/Widget.TextView">
        <item name="android:paddingRight">@dimen/small_padding</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
        <item name="android:textSize">@dimen/medium_font</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <!-- Filter styles -->
    <style name="table_row_input_style_button" parent="@android:style/Widget.Button">
        <item name="android:layout_weight">1</item>
        <item name="android:drawableEnd">@drawable/icon_right</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingRight">@dimen/small_padding</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
        <item name="android:textSize">@dimen/medium_font</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:background">@drawable/filter_button_background</item>
    </style>
    
</resources>
